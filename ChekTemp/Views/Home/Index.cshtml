@model ChekTemp.ViewModels.TemperatureViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h4>Check your temperature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label"></label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Check temperature" class="btn btn-primary" />
            </div>

            <div>@Model.Message</div>
        </form>
    </div>
</div>
